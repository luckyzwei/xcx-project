
.body{
  background: #FED93B;
  min-height:100%;
}
.scroll-content{
  padding: 30rpx;
}
.topic-header{
  margin-top: 39rpx;
  margin-bottom: 25rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.topic-header .nick-urls{
  position: relative;
}
.topic-header .nick-url{
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #FFFFFF;
  position: absolute;
  border-radius: 50%;
}

.all-nick-url{
  width:190rpx;
  height:46rpx;
}
.group-name{
  font-family: PingFangSC-Medium;
font-size: 36rpx;
color: #000000;
margin:0 10rpx; 
}
.topic-more{
  font-family: PingFangSC-Regular;
font-size: 26rpx;
color: #000000;
}
.topic-item{
  position: relative;
   width: 690rpx;
  height: 128rpx;
   margin-bottom: 20rpx;
}
.hideButton{
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
}
.topic-item .item{
  width: 690rpx;
  height: 128rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
 
}
.topic-item .topic{
font-family: PingFangSC-Medium;
font-size: 34rpx;
color: #000000;
width: 395rpx;
overflow: hidden;
white-space:nowrap;
text-overflow: ellipsis;
}
.topic-item .num{
  font-family: PingFangSC-Regular;
font-size: 26rpx;
color: #B2B2B2;
display: flex;
align-content: center;
}
.topic-number-img{
  width: 43rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.topic-msg-img{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
