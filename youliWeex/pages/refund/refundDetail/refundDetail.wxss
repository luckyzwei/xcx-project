/* pages/user/refund/refundDetail/refundDetail.wxss */

/* pages/user/logistics/logistics.wxss */

.refunDetail {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.refunDetailHeader {
    margin-bottom: 20rpx;
}

.editNumber {
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 8rpx;
    font-size: 30rpx;
}

.refunDetailHeaderImg {
    height: 8rpx;
    width: 100%;
    display: block;
    border: none;
}

.boxItem.color4 {
    color: #444 !important;
}

.boxItem.color9 {
    color: #9a9a9a !important;
}

.refunDetailHeaderContent,
.refunDetailHeaderContentText,
.refunDetailHeaderContentTextMessage {
    display: flex;
    font-size: 26rpx;
}

.refunDetailHeaderContent {
    padding: 30rpx 40rpx;
}

.refunDetailHeaderContentText {
    flex-direction: column;
    justify-content: space-between;
    color: #444;
    flex: 1;
}

.refunDetailHeaderContentTextNum {
    text-align: right;
}

.refunDetailHeaderContentTextMessage {
    justify-content: space-between;
    align-items: center;
}

.refunDetailHeaderContentTextMessageNum {
    color: #9A9A9A;
}

.refunDetailHeaderContentImgBox {
    position: relative;
    height: 160rpx;
    width: 160rpx;
    margin-right: 20rpx;
    /* background: red */
}

.refunDetailHeaderContentImg {
    width: 160rpx;
    height: 160rpx;
}

.refunDetailBtnBox {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    position: fixed;
    bottom: 0;
    left: 0;
}

.backgroundC0C0C0 {
    background: #f3f3f3;
}

.lineMain {
    flex: 1;
}