.iptMessageHeader {
    margin-bottom: 20rpx;
}

.iptMessageHeaderImg {
    height: 8rpx;
    width: 100%;
    display: block;
    border: none;
}

.iptMessageHeaderContent,
.iptMessageHeaderContentText,
.iptMessageHeaderContentTextMessage {
    display: flex;
    font-size: 26rpx;
}

.iptMessageHeaderContent {
    padding: 30rpx 40rpx;
}

.iptMessageHeaderContentText {
    flex-direction: column;
    justify-content: space-between;
    color: #444;
    flex: 1;
}

.iptMessageHeaderContentTextNum {
    text-align: right;
}

.iptMessageHeaderContentTextMessage {
    justify-content: space-between;
    align-items: center;
}

.iptMessageHeaderContentTextMessageNum {
    color: #9A9A9A;
}

.iptMessageHeaderContentImgBox {
    position: relative;
    height: 160rpx;
    width: 160rpx;
    margin-right: 20rpx;
}

.iptMessageHeaderContentImg {
    width: 160rpx;
    height: 160rpx;
}

.iptMessageContent {
    padding: 40rpx;
}

.iptMessagePickerBox {
    border: 1px solid #B5B5B5;
    border-radius: 6rpx;
    height: 82rpx;
    display: flex;
    align-items: center;
    margin-bottom: 40rpx;
}

.changePickerClass {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #B5B5B5;
}

.iptMessagePicker {
    width: 100%;
    overflow: hidden;
}

.iptMessagePickerIpt {
    padding: 0 20rpx;
    float: left;
    width: 80%;
    font-size: 30rpx;
    color: #444444;
}

.iptMessagePickerIpt.iptMessagePickerIpts {
    width: 100%
}

.iptMessagePickerIcon {
    float: right;
    display: block;
    width: 44rpx;
    height: 44rpx;
    background-position: -118rpx -276rpx;
    margin-right: 20rpx;
}

.iptMessagePickerBoxText {
    border: 1px solid #B5B5B5;
    border-radius: 6rpx;
    padding: 20rpx;
    margin-bottom: 40rpx;
    box-sizing: border-box;
}

.iptMessagePickerBoxText textarea {
    width: 100%;
    font-size: 30rpx;
    color: #444444;
    height: 250rpx;
}

.iptMessageUploadCredentialsTitle {
    display: block;
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 20rpx;
}

.iptMessageUploadCredentialsItem {
    width: 180rpx;
    height: 180rpx;
    border-radius: 6rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 40rpx;
}

.iptMessageUploadCredentialsItemImg {
    flex-wrap: wrap;
    display: flex;
}

.iptMessageUploadCredentialsItemImg>view {
    width: 180rpx;
    height: 180rpx;
    border-radius: 6rpx;
    overflow: hidden;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
}

.ptMessageUploadCredentialsItemIcon {
    display: block;
    width: 74rpx;
    height: 65rpx;
    background-position: -265rpx -220rpx;
}

.ptMessageUploadCredentialsItemText {
    font-size: 20rpx;
    color: #B5B5B5;
}

.lineDotted {
    border: 1px dotted #B5B5B5;
}

.lineSolid {
    border: 1px solid #B5B5B5;
    position: relative;
}

.colorIptMessage {
    color: #fff;
    background: #C0C0C0;
}

.iptMessageBtn {
    height: 98rpx;
    font-size: 36rpx;
    line-height: 98rpx;
    text-align: center;
}

.iptMessageUploadCredentialsItemImgIcon {
    display: block;
    width: 44rpx;
    height: 44rpx;
    background-position: -54rpx -694rpx;
    position: absolute;
    right: 0;
    z-index: 4;
}

.iptMessageUploadCredentialsItemImgUrl {
    width: 180rpx;
    height: 180rpx;
}