/* pages/store/store.wxss */

.storeMain {
    height: 100%;
    background: #f3f3f3;
}

.storeHeader {
    height: 320rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.storeHeader .headerbG {
    position: absolute;
    width: 100%;
    height: 320rpx;
}

.storeHeader .headerContent {
    position: absolute;
    width: 100%;
    height: 320rpx;
    background: rgba(0, 0, 0, .25);
    padding: 0 40rpx;
    box-sizing: border-box;
}

.storeHeader .headerContent .box {
    display: flex;
    align-items: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.storeHeader .headerContent .left {
    width: 110rpx;
    height: 110rpx;
    border-radius: 100%;
    margin-right: 20rpx;
    border: 2px solid #FFFFFF;
}

.storeHeader .headerContent .right {
    display: flex;
    flex-direction: column;
    flex: 1;
}

.storeHeader .headerContent .right .name {
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    margin-top: 6rpx;
    margin-bottom: 6rpx;
}

.storeHeader .headerContent .right .des {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    line-height: 36rpx;
}

.storeContent {
    background: #fff;
    margin-bottom: 20rpx;
}

.storeContentTitle {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30rpx 0;
    background: #fff;
}

.storeContentTitle .line {
    height: 2rpx;
    width: 30rpx;
    background: #DBDBDB;
}

.storeContentTitle .text {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #444444;
    letter-spacing: 8rpx;
    margin: 0 12rpx 0 20rpx;
}

.storeContent .swiper {
    width: 100%;
    height: 472rpx;
}

.storeContent .swiper .swiperItem {
    width: 450rpx !important;
    padding-left: 22rpx;
}

.storeContent .swiper .swiperItem .slideImage {
    width: 450rpx;
    height: 300rpx;
    border-radius: 6rpx;
    margin-bottom: 24rpx;
}

.storeContent .swiper .swiperItem .slideTitle {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #444444;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 14rpx;
}

.storeContent .swiper .swiperItem .slidePrice {
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #000000;
}

.storeContent .swiper .swiperItem .slidePrice text:nth-of-type(1) {
    font-size: 26rpx;
}

.storeFooter .listMain {
    background: #fff;
    display: flex;
    flex-wrap: wrap;
    padding: 0 24rpx;
    justify-content: space-between;
}

.storeFooter .listMain .list {
    width: 340rpx;
    height: 540rpx;
    background: #FFFFFF;
    box-shadow: 0 2rpx 24rpx 0 rgba(0, 0, 0, 0.06);
    border-radius: 6rpx;
    margin-bottom: 24rpx;
}

.storeFooter .listMain .list .img {
    width: 340rpx;
    height: 340rpx;
    border-radius: 6rpx 6rpx 0 0;
}

.storeFooter .listMain .list .title {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #444444;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-bottom: 30rpx;
    padding: 0 18rpx;
    box-sizing: border-box;
    height: 80rpx;
}

.storeFooter .listMain .list .title .jinkou {
    display: inline-block;
    background: #F03340;
    border-radius: 4px;
    width: 52rpx;
    height: 30rpx;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    margin-right: 10rpx;
}

.storeFooter .listMain .list .price {
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #000000;
    letter-spacing: 0;
    line-height: 33rpx;
    padding: 0 18rpx;
    box-sizing: border-box;
}

.storeFooter .listMain .list .price text:nth-of-type(1) {
    font-size: 24rpx;
}