/* pages/sell/record/index.wxss */

.sell-record {
  height: 100%;
}

.sell-record .sell-record-header {
  background: url('https://cloud.gemii.cc/lizcloud/fs/noauth/media/5aec00558c34ba0032ee9ca0') no-repeat;
  background-size: cover;
  height: 347rpx;
  position: relative;
}

.sell-record .sell-record-header .sell-record-header-content {
  background: #fff;
  box-shadow: 0 3rpx 15rpx 0 rgba(68, 68, 68, 0.09);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  padding: 50rpx 30rpx;
  width: 702rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  color: #444;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -60rpx;
  z-index: 999;
}

.sell-record .sell-record-header .sell-record-header-content .sell-record-header-content-img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}

.sell-record-header-content-text {
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-wrap: break-word;
  word-break: break-all;
}

.sell-record-list {
  height: calc(100% - 347rpx);
  padding: 0 32rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.sell-record-list .sell-record-list-title {
  width: 100%;
  height: 179rpx;
  display: flex;
  align-items: center;
  padding-top: 110rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border-bottom: 1px solid #e6e6e6;
}

.sell-record-list .sell-record-list-title text:nth-of-type(1) {
  flex: 1;
  padding-left: 27rpx;
}

.sell-record-list .sell-record-list-title text:nth-of-type(2) {
  padding-right: 8rpx;
}

.sell-record-list .sell-record-list-item .sell-record-list-item-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.sell-record-list .sell-record-list-item .sell-record-list-item-left .userImg {
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx 0 8rpx;
  box-sizing: border-box;
  border-radius: 100%;
}

.sell-record-list .sell-record-list-item .sell-record-list-item-left .userText {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
}

.sell-record-list .sell-record-list-item .sell-record-list-item-left .textLang {
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sell-record-list .sell-record-list-item .sell-record-list-item-left .fontSize26 {
  font-size: 26rpx;
}

.sell-record-list .sell-record-list-item>text {
  text-align: center;
}

.sell-record-list .sell-record-list-item>text:nth-of-type(1) {
  width: 120rpx;
  padding-right: 8rpx;
}

.sell-record-list-content {
  height: calc(100% - 179rpx);
}

.sell-record-list .sell-record-list-item {
  display: flex;
  align-items: center;
  padding: 22rpx 0;
  border-bottom: 1px solid #e6e6e6;
}

.sell-record-list .sell-record-list-item.kong {
  border: none;
}

.sell-record-list-nolist {
  padding-top: 219rpx;
  text-align: center;
}

.sell-record-address-list {
  background: #fff;
  box-shadow: 0 3px 15px 0 rgba(68,68,68,0.09);
  border-radius: 10px;
  padding: 16rpx;
  margin-bottom:36rpx;
}

.sell-record-address-list-header {
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
  border-bottom: 1px solid #e6e6e6;
  padding: 20rpx 0;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.user-info {
  display: flex;
  flex-direction: column;
  font-family: PingFangSC-Regular;
  margin-left: 20rpx;
}

.user-info .user-name {
  font-size: 26rpx;
  color: #444;
}

.user-info .user-record-time {
  font-size: 24rpx;
  color: #a1a1a1;
}

.sell-record-address-list-content {
  padding: 24rpx 0;
  line-height: 45rpx;
}

.address-list-content-receipt {
  display: flex;
  justify-content: flex-start;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #444;
}
.address-list-content-receipt .title{
   width: 130rpx;
   text-align: right;
}
.address-list-content-receipt>view{
  width: calc(100% - 130rpx)
}
.express-photos {
  display: flex;
  justify-content: flex-end;
  padding: 10rpx 0;
}

.express-photos .takePhotoBtn {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #ff3939;
  width: 228rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ff3939;
  border-radius: 100px;
}
.sell-record-address-list-content{
  height: 100%;
}
.sell-record-address-list-title{
  width:100%;
height:75rpx;
}