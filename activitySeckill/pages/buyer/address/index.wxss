page {
  background: #f5f5f5;
  color: #444;
}
.addOrrderBox .ad_popError{
  top:27%;
}
.address-view {
  height: 100%;
  overflow: hidden;
  font-family: PingFangSC-Regular;
  background: #fff;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.payaAdrimg {
  width: 100%;
  display: block;
  height: 8rpx;
}

.address-list-item {
  display: flex;
  align-items: center;
  padding:30rpx;
  border-bottom: 1px solid #e8e8e8;
}

.address-list-item:last-child {
  border-bottom: none;
  align-items:flex-start;
  padding:38rpx 30rpx;
}

.address-list-item .item-title {
  width: 18%;
  text-align: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.address-list-item input,.address-list-item .address{
  width:82%;
}

.order-view {
  padding: 30rpx;
  background: #fff;
}

.order-list {
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
}

.order-list .skuImg {
  border-radius: 4px;
  width: 130rpx;
  height: 130rpx;
}

.order-list .order-listItem {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
}

.order-listItem .order-listInfo {
  height: 100rpx;
  line-height: 47rpx;
  color: #444;
  overflow: hidden;
  display: -webkit-box;
  display: -moz-box;
  -webkit-box-orient: vertical;
  -moz-box-orient: vertical;
  -webkit-line-clamp: 2;
  -moz-line-clamp: 2;
}

.order-listItem .order-listNum {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between; /* 从左到右均匀排列 */
  width: 100%;
}

.order-listNum num {
  font-size: 28rpx;
  color: #a1a1a1;
}

.order-listNum .price .price-label {
  font-size: 24rpx;
  color: #444;
}

.order-listNum .price .price-money {
  font-size: 30rpx;
  color: #000;
  line-height: 33rpx;
}
.orderFooter-view{
  height: 100rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    position: absolute;
    bottom:0;
    background: #fff;
    height: 128rpx;
    
}
.orderFooter-view>view {
    flex: 1;
    display: flex;
    align-items: center;
    margin-left: 24rpx;
    font-size: 30rpx;
}
.totalPrice{
  font-family: PingFangSC-Medium;
font-size: 36rpx;
color: #FF3939;
}
.payFooterEnter{
  width: 240px;
  height: 100%;
   justify-content: center;
background-image: linear-gradient(-90deg, #FF5B41 0%, #FF773E 45%, #FF5B41 100%);
font-family: PingFangSC-Medium;
font-size: 34rpx;
color: #FFFFFF;
}