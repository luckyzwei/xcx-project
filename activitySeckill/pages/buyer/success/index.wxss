/* pages/buyer/success/index.wxss */

.success-main,
.success {
    width: 100%;
    height: 100%;
    background-color: #FF773E;
}
.success.seckill{
    background: url('https://cloud.gemii.cc/lizcloud/fs/noauth/media/5af5676c8c34ba0032eea265') no-repeat;
    background-size: 100%;
}
.success.bargain{
    background: url("https://cloud.gemii.cc/lizcloud/fs/noauth/media/5b3b4b780c3b46006ec04faa") no-repeat;
    background-size: 100%;
}

.success-main .order {
    padding: 25rpx 25rpx 50rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
    width: 640rpx;
    margin: 0 auto;
    box-sizing: border-box;
    transform: translateY(200rpx);
}

.success-main .order .goodImage {
    width: 590rpx;
    height: 590rpx;
    margin-bottom: 30rpx;
}

.success-main .order .goodName {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #444444;
    margin-bottom: 10rpx;
}

.success-main .order .address {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #444444;
    margin-bottom: 20rpx;
    display: flex;
}

.success-main .order .address .icon-address {
    width: 21rpx;
    height: 27rpx;
    margin-right: 13rpx;
    margin-top: 8rpx;
    flex: none;
}

.success-main .order .address .text{
    flex: auto;
}

.success-main .order .tip{
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    color: #FF3939;
}