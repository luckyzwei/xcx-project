/* pages/account/account.wxss */
page{
	background: #F6F6F6;
}
.section,picker{
	height: 6%;
	background: #fff;
	line-height: 74rpx;
}
.section .picker{
	color: #999999;
	height: 74rpx;
}
.optionHead{
	position: relative;
	width:200rpx;
margin:0 auto;
	height: 74rpx;

}
.section .iconSelect{
	width:12rpx;
	height: 24rpx;
	/*margin-left: 10rpx;*/
  vertical-align: middle;
  position: absolute;
 right: 0rpx;
 top: 25rpx;
}
.goodsBox{
	width: 100%;
	height: 94%;
	overflow: auto;
	position: relative;
  padding:10rpx 12rpx 0 12rpx;
  box-sizing:border-box;

}
.maskBox .bgWhite{
	height: 323rpx;

}
.maskBox .bgWhite .options{
	height: 80rpx;
	line-height: 80rpx;
	margin:0 30rpx;
}
.maskBox .bgWhite .options+ .options{
	border-top: 1px solid #E8E8E8;

}
.goodsBox .goods{
	width: 50%;
	padding:14rpx 12rpx 5rpx 12rpx;
	height: 544rpx;
	background: #F6F6F6;
	box-sizing: border-box;
	display: inline-block;
}
.goodsBox .goods .innerBox{
	padding:14rpx;
border-radius: 10rpx;
box-sizing: border-box;
}
.goodsBox .goodsName{
	height: 80rpx;
	overflow: hidden;
	line-height: 42rpx;
}
.goodsBox .liziBtn .textCenter{
	border-radius: 100px;
	width: 216rpx;
	height: 58rpx;
	line-height: 58rpx;
	margin:14rpx auto;
}
.goodsBox .goodsPicBox{
width:312rpx;
margin:0 auto 5rpx;
}
.goodsBox .goods .goodsPic{
	width: 312rpx;
	height: 312rpx;

}
.maskBox button{
	border-radius: 0;
}

.maskBox button[disabled] {
    background: #fff;
    color: #F45C43;
}












