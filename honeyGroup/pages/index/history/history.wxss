/* pages/index/history/history.wxss */
page{
	background: #fff;
}
.historyBox{
	background: #fff;
}
.historyBox,.historyBox .inner{
	line-height: 40rpx;
}
.historyBox .listBox .time{
  height:40rpx;
	margin:10rpx 0;
}

.historyBox .listBox{
	height: 160rpx;
	box-sizing: border-box;
	padding: 20rpx 30rpx 30rpx 30rpx;
	border-bottom: 2rpx solid #E8E8E8;
	width:90%;
margin:0 auto;

}
.historyBox .listBox:last-child{
	border:none;
}
.historyBox .listBox .status{
	border-radius: 100px;
	padding:5rpx 10rpx;
	height: 34rpx;
	line-height: 34rpx;
}
.historyBox .listBox .listTitle{
	overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;
height: 40rpx;
width: 440rpx;
}