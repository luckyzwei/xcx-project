@import "./../../../components/wecropper.wxss";
/* pages/sell/history/index.wxss */
.sell-secKill .sell-secKill-footer {
  /*position:fixed;*/
  height: 100rpx;
  border-radius: 0 !important;
  border: none !important;
  background-image: linear-gradient(-90deg, #ff5b41 0%, #ff773e 45%, #ff5b41 100%);
  box-shadow: 0 6rpx 11rpx 0;
  line-height: 100rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #ffffff;
}
.sell-secKill-header-top {
  padding: 61rpx 70rpx 53rpx 70rpx;
}
.sell-secKill-header-top-image {
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto;
  background-size: cover;
  background-position: center;
}
.sell-secKill-header-top-box {
  position: relative;
}
.sell-secKill-header-top-box .sell-secKill-header-top-btn {
  position: absolute;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #ffffff;
  background: rgba(0, 0, 0, 0.5);
}
.sell-secKill-header-from {
  padding: 0 40rpx 0 30rpx;
}
.sell-secKill-header-from-item .ipt-box,
.sell-secKill-header-from-item {
  display: flex;
  font-size: 28rpx;
}
.sell-secKill-header-from-item {
  margin-bottom: 20rpx;
}
.sell-secKill-header-from-item .ipt-box {
  align-items: center;
}
.sell-secKill-header-from-item .ipt-box .item-price {
  margin-right: 20rpx;
}
.sell-secKill-header-from-item .item-ipt-l {
  width: 528rpx;
  height: 90rpx;
  border-radius: 10rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.sell-secKill-header-from-item .item-ipt-s {
  width: 190rpx;
  height: 90rpx;
  border-radius: 10rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.sell-secKill-header-from-item .item-title {
  padding-top: 25rpx;
  width: 112rpx;
  margin-right: 20rpx;
  text-align: right;
}
.sell-secKill-header-from-item .item-img {
  width: 30rpx;
  height: 30rpx;
}
.sell-secKill-header-from-item .item-ipt {
  flex: 1;
}
.sell-secKill-header-from-item .item-text-name {
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}
.sell-secKill-header-from-item .ipt-box-radio-right {
  margin-right: 20rpx;
}
.sell-secKill-header-from-item .ipt-radio {
  display: none;
}
.sell-secKill-header-from-item .ipt-box-radio {
  text-align: center;
  line-height: 90rpx;
}
.sell-secKill-header-from-item .ipt-box-radio.active {
  background: url('https://cloud.gemii.cc/lizcloud/fs/noauth/media/5aebd5178c34ba0032ee9c88') no-repeat;
  background-size: 100%;
  color: #ff3939;
}
.sell-secKill-header-from-item .item-ipt.item-ipt-adr {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.sell-secKill-header-from-item-s {
  overflow: hidden;
  margin-bottom: 20rpx;
}
.sell-secKill-header-from-item-s .item-title {
  display: block;
  float: left;
  font-size: 28rpx;
  padding-top: 25rpx;
  width: 112rpx;
  margin-right: 20rpx;
  text-align: right;
}
.sell-secKill-header-from-item-s .ipt-textarea {
  display: block;
  float: left;
  height: 175rpx;
  width: 528rpx;
  font-size: 28rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.sell-secKill-header-from-item-s view {
  display: block;
  float: left;
  width: 548rpx;
  font-size: 28rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.sell-secKill-header-from-item-s view .ipt-textarea-s {
  width: 548rpx;
}
.cropper-buttons {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgba(0, 0, 0, 0.95);
  color: #04b00f;
}
