/* pages/sell/home/index.wxss */
.sell-home {
  height: 100%;
  position: relative;
  overflow: hidden;
}
.sell-home .sell-home-header {
  position: absolute;
  font-size: 28rpx;
  text-decoration: underline;
  top: 40rpx;
  right: 40rpx;
}
.sell-home .sell-home-middle {
  width: 300rpx;
  height: 300rpx;
  border-radius: 100%;
  position: absolute;
  top: 389rpx;
  left: 50%;
  transform: translateX(-50%);
}
.sell-home .sell-home-middle button {
  width: 300rpx;
  height: 300rpx;
  border-radius: 100%;
}
.sell-home .sell-home-middle .sell-home-middle-img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 100%;
}
.sell-home .sell-home-footer {
  position: absolute;
  font-size: 28rpx;
  border-radius: 52rpx;
  width: 300rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: 138rpx;
}
.rule-module {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}
.rule-module .rule-module-content {
  background: #fff;
  width: 650rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding-top: 40rpx;
  box-sizing: border-box;
}
.rule-module .rule-module-content .rule-module-content-title {
  font-size: 30rpx;
  padding: 20rpx 40rpx;
}
.rule-module .rule-module-content .rule-module-content-text {
  padding: 0 40rpx;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-bottom: 50rpx;
}
.rule-module .rule-module-content-btn {
  border-top: 1px solid #e8e8e8;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
}
