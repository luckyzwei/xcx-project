page{
  height: 100vh;
}
.root{
  height: 100vh;
  overflow: hidden;
  position: relative;
}


.navigation_bar {
  width: 100%;
  height: 64px;
  position: relative;
  text-align: center;
  background: #FED93B;
  z-index: 99999;
}

.navigation_bar .back {
  position: absolute;
  left: 19rpx;
  bottom: 14rpx;
  width: 60rpx;
  height: 60rpx;
}


.navigation_bar .title {
  left: 40%;
  width: 144rpx;
  bottom: 9.5px;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  height: 50rpx;
  position: absolute;
}

scroll-view {
  width: 100%;
  background: #f3f3f3;
}

scroll-view .gap {
  height: 20rpx;
  background: #f3f3f3;
}

scroll-view .item {
  padding-bottom: 30rpx;
  background: #fff;
}

scroll-view .item .user {
  padding-top: 30rpx;
  height: 50rpx;
  margin: 0 30rpx;
  width: 690rpx;
  display: flex;
  align-items: center;
}

scroll-view .item .user image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

scroll-view .item .user .name {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 10rpx;
  max-width: 400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}


scroll-view .item .user .date {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #999999;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 10rpx;
  flex: auto;
}

scroll-view .item .user .report {
  height: 40rpx;
  width: 40rpx;
}

scroll-view .item .user .report>image {
  height: 40rpx;
  width: 40rpx;
}

scroll-view .item .title {
  padding: 30rpx 0;
  margin: 0 30rpx;
  width: 690rpx;
  max-height: 100rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: left;
}

scroll-view .item .total {
  height: 40rpx;
  display: flex;
  justify-content: flex-end;
  margin: 0 30rpx;
  width: 690rpx;
}


scroll-view .item .total .recommandCount{
  width: 70rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #B2B2B2;
  text-align: left;
}

scroll-view .item .total .recommandImage {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
  
}

scroll-view .item .total .pageViewCount{
  margin-right: 25rpx;
  width: 90rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #B2B2B2;
  text-align: left;
}

scroll-view .item .total .pageViewImage {
  width: 50rpx;
  height: 40rpx;
  margin-right: 8rpx;
}


.footerRefresh {
  height: 113rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  background: #f3f3f3;
}

.footerRefresh view {
  width: auto;
  height: 113rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #B2B2B2;
  line-height: 113rpx;
}

.footerRefresh image {
  width: 30rpx;
  height: 30rpx;
  margin: auto 10rpx;
  animation: refreshAnimation 1s infinite;
}


@keyframes refreshAnimation {
  0% {transform:rotateZ(0deg);}
  5% {transform:rotateZ(18deg);}
  10% {transform:rotateZ(36deg);}
  15% {transform:rotateZ(54deg);}
  20% {transform:rotateZ(72deg);}
  25% {transform:rotateZ(90deg);}
  30% {transform:rotateZ(108deg);}
  35% {transform:rotateZ(126deg);}
  40% {transform:rotateZ(144deg);}
  45% {transform:rotateZ(162deg);}
  50% {transform:rotateZ(180deg);}
  55% {transform:rotateZ(198deg);}
  60% {transform:rotateZ(216deg);}
  65% {transform:rotateZ(234deg);}
  70% {transform:rotateZ(252deg);}
  75% {transform:rotateZ(270deg);} 
  80% {transform:rotateZ(288deg);}
  85% {transform:rotateZ(306deg);}
  90% {transform:rotateZ(324deg);}
  95% {transform:rotateZ(342deg);}
  100% {transform:rotateZ(360deg);}
}

.show {
  display: inline-block;
}

.show_flex {
  display: flex;
}

.hide {
  display: none;
}
