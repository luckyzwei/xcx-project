page{
  height: 100vh;
}
.root{
  height: 100vh;
  overflow: hidden;
}


.navigation_bar {
  width: 100%;
  height: 64px;
  position: relative;
  text-align: center;
  background: #FED93B;
}

.navigation_bar .back {
  position: absolute;
  left: 19rpx;
  bottom: 14rpx;
  width: 60rpx;
  height: 60rpx;
}

.navigation_bar .title {
  left: 41%;
  width: 144rpx;
  bottom: 9.5px;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  height: 50rpx;
  position: absolute;
}

.search_bar {
  background: #FED93B;
  width: 100%;
  height: 86rpx;
  align-items: center;
  display: flex;
}

.search_bar .search_action {
  margin-left: 30rpx;
  width: 604rpx;
  height: 62rpx;
  background: #ffffff;
  border-radius: 31rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.search_bar .cancel {
  
  height: 40rpx;
  margin-left: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  text-align: left;
}

.search_bar .search_action>image {
  margin-left: 40rpx;
  display: inline-block;
  height: 30rpx;
  width: 30rpx;
  margin-right: 10rpx;
}

.search_bar .search_action>input {
  width: 494rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  text-align: left;
  line-height: 62rpx;
  height: 62rpx;
}

.search_bar .search_action .holder {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #B2B2B2;
  text-align: left;
}

scroll-view {
  width: 100%;
  overflow: auto;
}

scroll-view .title{
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #000000;
  height: 45rpx;
  line-height: 45rpx;
  margin: 0 0 10rpx 30rpx;
  padding-top: 40rpx;
}

scroll-view .key {
  margin: 30rpx 40rpx 0 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  height: 40rpx;
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
}

scroll-view .key>view {
  width: auto;
  flex: none;
  margin-right: 20rpx;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
}

.red {
  color: #FB3C41;
}

.orange {
  color: #FF9900;
}

scroll-view .line {
  margin: 30rpx 40rpx 0;
  background: #E6E6E6;
  width: 670rpx;
  height: 1rpx;
}

.hide{
  display: none;
}

.show {
  display: block;
}