page{
  height: 100vh;
}
.root{
  height: 100vh;
  overflow: hidden;
  position: relative;
}


.navigation_bar {
  width: 100%;
  height: 64px;
  position: relative;
  text-align: center;
  background: #FED93B;
  z-index: 99999;
}


.navigation_bar .title {
  left: 41%;
  width: 144rpx;
  bottom: 9.5px;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  height: 50rpx;
  position: absolute;
}

scroll-view {
  width: 100;
  
}

scroll-view .user {
  width: 100%;
  height: 220rpx;
  display: flex;
  align-items: center;
  background: #FED93B;
}

scroll-view .gap {
  width: 100%;
  height: 20rpx;
  background: #f3f3f3;
}

scroll-view .line {
  width: 690rpx;
  height: 1px;
  margin: 0 30rpx;
  background: #e6e6e6;
}

scroll-view .user>image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  margin-left: 40rpx;
  border: 4rpx solid #FFFFFF;
}


scroll-view .user>view {
  margin-left: 30rpx;
  height: 56rpx;
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #000000;
}

scroll-view .article,scroll-view .thumb,scroll-view .notify,scroll-view .history {
  height: 122rpx;
  width: 100%;
  align-items: center;
  display: flex;
}


scroll-view .article .icon,scroll-view .thumb .icon,scroll-view .notify .icon,scroll-view .history .icon {
  width: 46rpx;
  height: 46rpx;
  margin-left: 40rpx;
}

scroll-view view>view {
  height: 42rpx;
  margin-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  flex: auto;
}

scroll-view .article .arrow,scroll-view .thumb .arrow,scroll-view .notify .arrow {
  width: 14rpx;
  height: 22rpx;
  margin-right: 40rpx;
}

scroll-view .notify .count {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999999;
  height: 42rpx;
  margin-right: 10rpx;
  flex: none;
  margin-left: 0;
}

scroll-view .notify .badge {
  width: 18rpx;
  height: 18rpx;
  border-radius: 18rpx;
  margin-right: 40rpx;
  flex: none;
  background: #FB3C41;
  margin-left: 0;
}

scroll-view .list {
  padding-bottom: 40rpx;
}

scroll-view .list .info {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #000000;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin: 20rpx 40rpx;
}





