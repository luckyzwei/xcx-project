page{
  height: 100vh;
}
.root{
  height: 100vh;
  overflow: hidden;
  position: relative;
}


.navigation_bar {
  width: 100%;
  height: 64px;
  position: relative;
  text-align: center;
  background: #FED93B;
  z-index: 99999;
}

.navigation_bar .back {
  position: absolute;
  left: 19rpx;
  bottom: 14rpx;
  width: 60rpx;
  height: 60rpx;
}


.navigation_bar .title {
  left: 40%;
  width: 144rpx;
  bottom: 9.5px;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  height: 50rpx;
  position: absolute;
}

.message {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #000000;
  margin: 40rpx 30rpx 10rpx;
}

.item {
  margin-left: 40rpx;
  height: 100rpx;
  align-items: center;
  display: flex;
}

.item>image {
  width: 30rpx;
  height: 30rpx;
}

.item>view {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  margin-left: 20rpx;
}

.line {
  height: 1px;
  margin: 0 40rpx;
  width: 670rpx;
  background: #E6E6E6;
}

textarea {
  margin: 0 40rpx 30rpx;
  width: 670rpx;
  height: 400rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  text-align: left;
  line-height: 49rpx;
}

.textholder {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #B2B2B2;
  text-align: left;
  line-height: 49rpx;
}

.bottom {
  position: absolute;
  height: 176rpx;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: flex-end;
}

.bottom .cancel {
  background: #E8E8E8;
  border-radius: 50rpx;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #909090;
  text-align: center;
  margin-right: 30rpx;
}

.bottom .submit {
  background: #FED93B;
  border-radius: 50rpx;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #000000;
  text-align: center;
  margin-right: 40rpx;
}

.hide {
  display: none;
}

.show {
  display: inline-block;
}